<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minWidth="200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <BorderPane fx:id="topBarContainerTextInterview" BorderPane.alignment="CENTER">
            <center>
                <BorderPane fx:id="headerGrid">
                    <center>
                        <Text fx:id="textInterviewTitle" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                            <font><Font size="22.0" /></font>
                     <BorderPane.margin>
                        <Insets bottom="20.0" />
                     </BorderPane.margin>
                        </Text>
                    </center>
                    <bottom>
                        <Label fx:id="textInterviewComment" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    </bottom>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
                </BorderPane>
            </center>
        </BorderPane>
    </top>
    <center>
        <StackPane fx:id="stackForDragDrop" BorderPane.alignment="CENTER">
            <TextArea id="textInterview" fx:id="textInterview" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
        </StackPane>
    </center>
</BorderPane>
