<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox fx:id="toolBarAnnotation">
            <ToggleButton fx:id="buttonAnnotateYellow"
                          text="Yellow"
                          styleClass="button-tool-annotation"
                          stylesheets="/css/application.css"></ToggleButton>
            <ToggleButton fx:id="buttonAnnotateRed"
                          text="Red"
                          styleClass="button-tool-annotation"
                          stylesheets="/css/application.css"></ToggleButton>
            <ToggleButton fx:id="buttonAnnotateBlue"
                          text="Blue"
                          styleClass="button-tool-annotation"
                          stylesheets="/css/application.css"></ToggleButton>
            <ToggleButton fx:id="buttonAnnotateGreen"
                          text="Green"
                          styleClass="button-tool-annotation"
                          stylesheets="/css/application.css"></ToggleButton>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="stackPaneInterview">
            <!-- Here is inserted the rich text area -->
        </StackPane>
    </center>
</BorderPane>
