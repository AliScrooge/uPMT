<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="typePane" maxHeight="30.0" prefHeight="30.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <Label fx:id="nomType" text="Label" BorderPane.alignment="CENTER">
         <graphic>
            <ImageView fx:id="classIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
         </graphic></Label>
   </left>
   <padding>
      <Insets bottom="3.0" right="8.0" top="3.0" />
   </padding>
   <center>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Button fx:id="rename" mnemonicParsing="false" onAction="#rename" prefHeight="25.0" />
            <ColorPicker fx:id="couleurType" onAction="#pickColor" prefHeight="25.0">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </ColorPicker>
            <Button fx:id="addProperty" mnemonicParsing="false" onAction="#addProperty" prefHeight="25.0" />
            <Button fx:id="deleteClass" mnemonicParsing="false" onAction="#deleteClass" prefHeight="25.0" />
         </children>
         <BorderPane.margin>
            <Insets left="15.0" />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
